{
    "compilerOptions": {
        "strict": true,
        "outDir": "../dist",
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": false,
        "experimentalDecorators": true,
        "pretty": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": [
        "**/*.lambda.ts"
    ]
}